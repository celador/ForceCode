{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "removeComments": true,
    "target": "es6",
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "lib": ["dom", "es2016", "es6"],
    "sourceMap": true,
    "rootDir": "."
  },
  "exclude": ["typings/browser", "typings/browser.d.ts", "node_modules"]
}
