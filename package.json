{
  "name": "ForceCode",
  "version": "0.5.13",
  "publisher": "JohnAaronNelson",
  "description": "Visual Studio Code extension for Salesforce (SFDC) development",
  "author": {
    "name": "CodeScience"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.9.0"
  },
  "icon": "images/new-logo.png",
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#FF4500",
    "theme": "dark"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/celador/ForceCode.git"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "ForceCode.showMenu",
        "title": "ForceCode Menu",
        "description": "Run ForceCode Commands"
      },
      {
        "command": "ForceCode.apexTest",
        "title": "Force: Test",
        "description": "Run Apex unit tests"
      },
      {
        "command": "ForceCode.documentMethod",
        "title": "Force: Document Apex Method",
        "description": "Document this Apex method with JSDoc syntax"
      },
      {
        "command": "ForceCode.compile",
        "title": "Force: Save/Deploy/Compile",
        "description": "Compile a Salesforce file"
      },
      {
        "command": "ForceCode.executeAnonymous",
        "title": "Force: Execute Anonymous",
        "description": "Execute Anonymous Apex and get the debug result"
      },
      {
        "command": "ForceCode.open",
        "title": "Force: Get Class, Page, or Trigger",
        "description": "Open a Salesforce file"
      },
      {
        "command": "ForceCode.staticResource",
        "title": "Force: Bundle / Deploy Static Resource",
        "description": "Bundles a Resource Bundle into a Static Resource and optionally deploys"
      },
      {
        "command": "ForceCode.toggleCoverage",
        "title": "Force: Toggle Test Coverage",
        "description": "Toggle the test coverage for Apex classes and triggers",
        "icon": {
          "light": "./images/coverage.svg",
          "dark": "./images/coverage.svg"
        }
      }
    ],
    "keybindings": [
      {
        "key": "alt+cmd+t",
        "command": "ForceCode.apexTest",
        "when": "resourceLangId == apex && editorFocus",
        "win": "ctrl+shift+t"
      },
      {
        "command": "ForceCode.documentMethod",
        "key": "alt+cmd+d",
        "win": "ctrl+shift+d",
        "when": "editorFocus && resourceLangId == apex"
      },
      {
        "command": "ForceCode.showMenu",
        "key": "alt+cmd+c",
        "win": "ctrl+shift+c",
        "when": "editorFocus"
      },
      {
        "command": "ForceCode.compile",
        "key": "alt+cmd+s",
        "win": "ctrl+shift+s",
        "when": "editorFocus"
      },
      {
        "command": "ForceCode.executeAnonymous",
        "key": "alt+cmd+e",
        "win": "ctrl+shift+e",
        "when": "editorFocus"
      },
      {
        "command": "ForceCode.open",
        "key": "alt+cmd+o",
        "win": "ctrl:shift+o"
      },
      {
        "command": "ForceCode.staticResource",
        "key": "alt+cmd+b",
        "win": "ctrl+shift+b"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ForceCode configuration",
      "properties": {
        "force.filesExclude": {
          "type": "object",
          "default": {
            ".gitignore": true,
            ".DS_Store": true,
            ".org_metadata": true,
            "**/*.map": true,
            "node_modules/**": true,
            "bower_modules/**": true,
            "**.tmp": true,
            "**/*-meta.xml": true,
            ".log": true
          },
          "description": "An object describing the files to exclude from the Static Resource build. The key is a Nodejs \"Glob\" pattern, the value is true or false"
        }
      }
    },
    "languages": [
      {
        "id": "apex",
        "extensions": [
          ".apex",
          ".cls",
          ".trigger",
          ".tgr"
        ],
        "aliases": [
          "Apex"
        ],
        "configuration": "./languages/apex-language-configuration.json"
      },
      {
        "id": "visualforce",
        "extensions": [
          ".component",
          ".page"
        ],
        "aliases": [
          "Visualforce"
        ]
      },
      {
        "id": "staticResource",
        "extensions": [
          ".resource"
        ]
      },
      {
        "id": "xml",
        "extensions": [
          ".xml",
          ".object",
          ".layout",
          ".resource",
          ".remoteSite",
          ".labels",
          ".app",
          ".dashboard",
          ".permissionset",
          ".workflow",
          ".email",
          ".profile",
          ".scf",
          ".queue",
          ".reportType",
          ".report",
          ".weblink",
          ".tab",
          ".letter",
          ".role",
          ".homePageComponent",
          ".homePageLayout",
          ".objectTranslation",
          ".flow",
          ".datacategorygroup",
          ".snapshot",
          ".site",
          ".sharingRules",
          ".settings",
          ".callCenter",
          ".community",
          ".authProvider",
          ".customApplicationComponent",
          ".quickAction",
          ".approvalProcess",
          ".app",
          ".auradoc",
          ".cmp",
          ".evt",
          ".tokens",
          ".design",
          ".object"
        ]
      },
      {
        "id": "html",
        "aliases": [
          "Visualforce"
        ],
        "extensions": [
          ".page"
        ]
      },
      {
        "id": "apex",
        "aliases": [
          "Apex"
        ],
        "extensions": [
          ".apex"
        ]
      },
      {
        "id": "html",
        "aliases": [
          "HTML"
        ],
        "extensions": [
          ".html"
        ]
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == apex",
          "command": "ForceCode.toggleCoverage",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == apex",
          "command": "ForceCode.compile",
          "group": "ForceCode"
        },
        {
          "when": "resourceLangId == visualforce",
          "command": "ForceCode.compile",
          "group": "ForceCode"
        },
        {
          "when": "resourceLangId == xml",
          "command": "ForceCode.compile",
          "group": "ForceCode"
        }
      ]
    }
  },
  "scripts": {
    "bump": "npm version patch && git push && git push --tags && vsce publish",
    "rebuild": "./node_modules/.bin/electron-rebuild -n 49 -v 1.3.8",
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "clean": "rm -rf node_modules/",
    "test": "node ./node_modules/vscode/bin/test",
    "tslint": "tslint -c tslint.json src/**/*.ts"
  },
  "extensionDependencies": [
    "JohnAaronNelson.apex",
    "JohnAaronNelson.visualforce"
  ],
  "dependencies": {
    "archiver": "^1.2.0",
    "cs-jsforce-metadata-tools": "^1.2.6",
    "elegant-spinner": "^1.0.1",
    "fs-extra": "^1.0.0",
    "globule": "^1.1.0",
    "jsforce": "github:celador/jsforce",
    "jszip": "^3.1.3",
    "klaw": "^1.3.1",
    "lodash": "^4.16.6",
    "moment": "^2.17.1",
    "node-fetch": "^1.6.3",
    "node-zip": "^1.1.1",
    "os": "^0.1.1",
    "sequin": "^0.1.0",
    "typescript": "^2.0.7",
    "unzip": "^0.1.11",
    "vscode": "^1.0.3",
    "xml2js": "^0.4.17",
    "zip": "^1.2.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "chai": "^3.5.0",
    "electron-rebuild": "^1.4.0",
    "mocha": "^3.1.2"
  }
}
